<% layout('layout/boilerplate') -%>
<div class="container d-flex justify-content-center align-items-center h-100">
    <div class="row d-flex justify-content-center mb-3 mt-3">
        <div class="col-md-8 col-sm-12 col-lg-10">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1534880606858-29b0e8a24e8d?q=80&w=1740&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" style="width: 100%; max-height:350px;" alt="...">
                <div class="card-body px-5">
                    <form action="/register" method="post" class="validation-form" novalidate>
                        <h5 class="card-title">Register</h5>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" name="user[username]" id="username" class="form-control" required>
                        </div>
                        <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="user[email]" id="email" class="form-control" required>
                        </div>
                        <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        </div>
                        <div class="mb-3">
                        <input type="password" name="user[password]" id="password" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success w-100">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>   
</div>




